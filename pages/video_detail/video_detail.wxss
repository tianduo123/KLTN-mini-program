/* pages/video_detail/video_detail.wxss */
@import "/wxParse/wxParse.wxss";
.video{
  width: 100%;
  height: 420rpx
}
.title{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  box-sizing: border-box;
  padding-left: 30rpx;
  font-size: 26rpx
}
.line{
  width: 100%;
  height: 20rpx;
  background: #eeeeee
}
.btn{
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  border-top: 1rpx solid #eeeeee
}
.btn_item{
  width: 33.33%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-size: 24rpx;
  color: #999999
}
.z{
  display: flex;
  align-items: center
}
.comment_title{
  font-size: 28rpx;
  font-weight: bold;
  margin-top: 20rpx;
  margin-left: 30rpx;
  margin-bottom: 30rpx
}
.comment_wrap{
  box-sizing: border-box;
  padding: 30rpx;
  width: 100%;
  margin-bottom: 50rpx
}
.comment_wrap_item{
  width: 100%;
  border-bottom: 1px solid #eeeeee;
  margin-top: 20rpx
}
.top{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center
}
.bottom{
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 10rpx
}
.avatar{
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx
}
.info{
  display: flex;
  flex-direction: column;
  font-size: 28rpx
}
.left{
  display: flex;
  align-items: center
}
