/* pages/index2/index2.wxss */

page {
  background: #d5d4ee;
  box-sizing: border-box;
  padding-bottom: 30rpx;
}

.banner {
  width: 100%;
  height: 360rpx;
}

.banner2 {
  margin: 30rpx auto;
  width: 700rpx;
  height: 120rpx;
  border-radius: 60rpx;
  overflow: hidden;
}

.menu {
  width: 500rpx;
  height: 500rpx;
  /* background: #fff; */
  margin: 0 auto;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.menu>image {
  width: 45%;
  height: 45%;
}

.icon {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  font-size: 24rpx;
  color: #666;
  margin-top: 50rpx;
}

.icon_img {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
}

.pintuan {
  position: fixed;
  right: 0;
  top: 550rpx;
  width: 150rpx;
  height: 120rpx;
}

.getU {
  width: 100%;
  background: rgba(0, 0, 0, 0.4);
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.getU_wrap {
  width: 80%;
  height: 800rpx;
  background: #fff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.getU_t {
  width: 100%;
  height: 80rpx;
  border-bottom: 1px solid #eee;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #666;
}

.getU_c {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 26rpx;
  color: #666;
}

.getU_btn {
  width: 400rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  background: #3c0;
  color: #fff;
  border-radius: 50rpx;
  font-size: 30rpx;
}
