page{
  box-sizing: border-box;
  padding-bottom: 30rpx
}
.banner{
  width: 100%;
  height: 400rpx;
}
.tab{
  width: 100%;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap
}
.tab-item{
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  margin-bottom: 40rpx
}
.line{
  width: 100%;
  height: 20rpx;
  background: #eeeeee
}
.funwrap{
  margin-left: 27rpx;
  display: flex;
  flex-direction: column;
  margin-bottom: 100rpx
}
.fun-item{
  display: flex;
  width: 100%;
  height: 184rpx;
  border-bottom: 1px solid #eeeeee;
  align-items: center
}
.zuji{
  display: flex;
  align-items: center
}
.content{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-left: 27rpx
}
.wrap{
  position: fixed;
  top: 0;
  left: 0
}
.near{
  width: 100%;
  height: 300rpx;
  box-sizing: border-box;
  padding: 20rpx 0 20rpx 20rpx
}
.near_top{
  width: 100%;
  height: 50rpx;
  display: flex;
  justify-content: space-between;
  align-items: center
}
.scroll_item{
  width: 210rpx;
  height: 190rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
  text-align: center;
  font-size: 28rpx;
  display: inline-block
}
.icon{
  width: 100%;
  /* height: 60rpx; */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  font-size: 24rpx;
  color: #666666;
  /* margin-bottom: 50rpx */
}
.icon_img{
  width: 35rpx;
  height: 35rpx;
  border-radius: 50%;
  overflow: hidden
}