page{
  box-sizing: border-box;
  padding-bottom: 30rpx
}
.banner{
  width: 100%;
  height: 360rpx;
}
.tab{
  width: 100%;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap
}
.tab-item{
  width: 25%;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  /* margin-bottom: 40rpx */
}
.line{
  width: 100%;
  height: 20rpx;
  background: #eeeeee
}
.funwrap{
  margin-left: 27rpx;
  display: flex;
  flex-direction: column;
  margin-bottom: 100rpx
}
.fun-item{
  display: flex;
  width: 100%;
  height: 184rpx;
  border-bottom: 1px solid #eeeeee;
  align-items: center
}
.zuji{
  display: flex;
  align-items: center
}
.content{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-left: 27rpx
}
.wrap{
  position: fixed;
  top: 0;
  left: 0
}
.near{
  width: 100%;
  height: 300rpx;
  box-sizing: border-box;
  padding: 20rpx 0 20rpx 20rpx
}
.near_top{
  width: 100%;
  height: 50rpx;
  display: flex;
  justify-content: space-between;
  align-items: center
}
.scroll_item{
  width: 210rpx;
  height: 190rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
  text-align: center;
  font-size: 28rpx;
  display: inline-block
}
.icon{
  width: 100%;
  /* height: 60rpx; */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  font-size: 24rpx;
  color: #666666;
  /* margin-bottom: 50rpx */
}
.icon_img{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden
}
.getU{
  width: 100%;
  background: rgba(0,0,0,.4);
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: space-around
}
.getU_wrap{
  width: 80%;
  height: 800rpx;
  background: #ffffff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around
}
.getU_t{
  width:100%;
  height: 80rpx;
  border-bottom: 1px solid #eeeeee;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #666666
}
.getU_c{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 26rpx;
  color: #666666;
}
.getU_btn{
  width: 400rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  background: #33cc00;
  color: #ffffff;
  border-radius: 50rpx;
  font-size: 30rpx
}
.gg{
  width: 90%;
  height: 65rpx;
  background: linear-gradient(to right, #edf1f4, #daf6f9);
  border-radius: 50rpx;
  margin: 30rpx auto;
  display: flex;
  align-items: center
}
.gg>image{
  margin-left: 30rpx;
  width: 40rpx;
  height: 40rpx
}
.gg_content{
  font-size: 26rpx;
  margin-left: 30rpx
}
.everyDay{
  display: flex;
  align-items: center;
  justify-content: space-around
}
